# Doxygen configuration (configured by CMake)

PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_BRIEF          = "Header-only C++ MFCC pipeline with Python bindings"
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/doxygen"

# Inputs
INPUT                  = "@CMAKE_CURRENT_SOURCE_DIR@/include" \
                         "@CMAKE_CURRENT_SOURCE_DIR@/bindings" \
                         "@CMAKE_CURRENT_SOURCE_DIR@/docs/DoxygenMainpage.md"
RECURSIVE              = YES
FILE_PATTERNS          = *.hpp *.h *.cpp *.cxx

# Markdown
MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = "@CMAKE_CURRENT_SOURCE_DIR@/docs/DoxygenMainpage.md"

# Extraction
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

# Output formats
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Quality of life
QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO

# Make paths in the output nicer
STRIP_FROM_PATH        = "@CMAKE_CURRENT_SOURCE_DIR@"

# Graphs (enabled if Graphviz 'dot' is installed)
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
